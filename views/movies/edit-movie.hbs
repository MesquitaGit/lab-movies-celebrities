<h2>Edit Movie: {{movie.title}}</h2>

<form action="/movies/{{movie.id}}" method="post">

    <label for="">
        Edit title
        <input type="text" name="title" value="{{movie.title}}">
    </label>

    <label for="">
        Edit Genre
        <input type="text" name="genre" value="{{movie.genre}}">
    </label>

    <label for="">
        Edit Plot:
        <textarea name="plot" cols="30" rows="5">
            {{movie.plot}}
        </textarea>
    </label>

    <label for="cast">Edit Cast: </label>

    <select name="cast" multiple>
        
        {{#each allCelebrities}}
            
            <option value="{{_id}}">{{name}}</option>

        {{/each}}

    </select>

    <button type="submit">Edit</button>
</form>